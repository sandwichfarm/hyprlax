#!/bin/bash
# Pre-commit hook that runs the lint script

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Find the project root (where .git directory is)
PROJECT_ROOT="$(git rev-parse --show-toplevel)"
LINT_SCRIPT="$PROJECT_ROOT/scripts/lint.sh"

echo "Running pre-commit checks..."

# Check if lint script exists
if [ ! -x "$LINT_SCRIPT" ]; then
    echo -e "${YELLOW}Warning: Lint script not found at $LINT_SCRIPT${NC}"
    echo "Skipping pre-commit checks."
    exit 0
fi

# Run the lint script
if "$LINT_SCRIPT"; then
    echo -e "${GREEN}Pre-commit checks passed!${NC}"
    exit 0
else
    echo ""
    echo -e "${RED}Pre-commit checks failed!${NC}"
    echo "Fix the issues above and try again."
    echo ""
    echo "Options:"
    echo "  1. Run 'make lint-fix' or './scripts/lint.sh --fix' to auto-fix some issues"
    echo "  2. Fix the issues manually"
    echo "  3. Use 'git commit --no-verify' to bypass checks (not recommended)"
    exit 1
fi